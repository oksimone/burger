<nav class=" nav justify-content-center">
  <span class="navbar-brand mb-0 h1">Welcome to Goodburger, Home of the Goodburger. Can I take your order?!</span>
</nav>


<div class="container">
  <div class="row">
    <div class="col-4" id="col1">
      <h2>Burgers to be devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>


    <div class="col-3 ml-5" id="col2">
      <h2>Add a Burger</h2>

      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <button type="submit" id="addb">Add Burger</button>
      </form>

    </div>


    <div class="col-4 mr-0" id="col3">

      <h2>Burgers that are devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>

    </div>

  </div>
</div>